@model Project_Ceustermans_Robin.ViewModels.CreateMedeEigenaarViewModel


<h1 class="text-center">Nieuwe Mede-eigenaren aanmaken</h1>


<div>
    <div class="col-md-6 ">
        <form asp-action="CreateMedeEigenaar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label">Voornaam</label>
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Familienaam" class="control-label">Familienaam</label>
                <input asp-for="Familienaam" class="form-control" />
                <span asp-validation-for="Familienaam" class="text-danger"></span>
            </div>           
            <div class="form-group" id="">
                <input type="submit" onclick="this.form.submit(); this.disabled = true;" value="Maak mede-eigenaar aan" class="btn btn-primary" />
            </div>
        </form>

    </div>

</div>